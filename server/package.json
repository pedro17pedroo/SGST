{
  "name": "sgst-backend",
  "version": "1.0.0",
  "description": "Backend do Sistema de Gest√£o de Stock e Transporte",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development tsx src/index.ts",
    "start": "NODE_ENV=production node dist/index.js",
    "build": "esbuild src/index.ts --platform=node --bundle --format=cjs --outdir=dist --minify --sourcemap --external:mysql2 --external:drizzle-orm --external:sequelize --external:sqlite3 --external:pg-hstore --external:tedious --external:mysql --external:mariadb --external:pg --external:pg-native",
    "build:prod": "NODE_ENV=production esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --external:mysql2 --external:drizzle-orm --external:sequelize --external:sqlite3 --external:pg-hstore --external:tedious --external:mysql --external:mariadb --external:pg --external:pg-native --format=cjs --minify --sourcemap",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/seed.ts",
    "db:push": "drizzle-kit push",
    "db:check-users": "tsx check-users.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.4.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.36.4",
    "drizzle-zod": "^0.8.3",
    "express": "^5.1.0",
    "hono": "^4.6.14",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.4",
    "nanoid": "^5.1.5",
    "sqlite3": "^5.1.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.10.2",
    "drizzle-kit": "^0.30.0",
    "esbuild": "^0.25.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
