# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# Frontend Configuration (for separate deployment)
# When deploying frontend and backend separately, set this to your backend URL
FRONTEND_URL="http://localhost:3000"

# Client-side API URL (used by frontend to connect to backend)
# Set this when building the frontend for production
VITE_API_URL="http://localhost:5000"

# Development/Production Environment
NODE_ENV="development"

# Session Secret (for authentication)
SESSION_SECRET="your-super-secret-key-here"

# Port Configuration
PORT=5000