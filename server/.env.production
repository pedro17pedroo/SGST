# Configuração de Produção - SGST

# Database Configuration (MySQL para produção)
DATABASE_URL="mysql://sgst_user:sua_senha_segura@localhost:3306/sgst_production"

# Frontend Configuration (URL do servidor frontend)
FRONTEND_URL="https://gstock.tatusolutions.com"

# Client-side API URL (URL do servidor backend)
VITE_API_URL="https://gstock-api.tatusolutions.com"

# Production Environment
NODE_ENV="production"

# Session Secret (ALTERE PARA UMA CHAVE SEGURA)
SESSION_SECRET="sgst-prod-secret-key-2025-angola-$(openssl rand -hex 32)"

# Port Configuration
PORT=4002

# CORS Configuration
CORS_ORIGIN="https://gstock.tatusolutions.com"

# SSL Configuration (se usando HTTPS)
SSL_CERT_PATH="/path/to/ssl/cert.pem"
SSL_KEY_PATH="/path/to/ssl/key.pem"

# Logging
LOG_LEVEL="info"
LOG_FILE="/var/log/sgst/app.log"

# Performance
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30000

# Security
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100