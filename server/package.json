{
  "name": "sgst-backend",
  "version": "1.0.0",
  "description": "Backend do Sistema de Gest√£o de Stock e Transporte",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx src/index.ts",
    "start": "NODE_ENV=production node dist/index.js",
    "build": "esbuild src/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist --minify --sourcemap",
    "build:prod": "NODE_ENV=production esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --external:mysql2 --external:drizzle-orm --format=esm --minify --sourcemap",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/seed.ts",
    "db:push": "drizzle-kit push"
   },
   "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.4.1",
    "drizzle-orm": "^0.36.4",
    "hono": "^4.6.14",
    "mysql2": "^3.11.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "drizzle-kit": "^0.30.0",
    "esbuild": "^0.25.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}